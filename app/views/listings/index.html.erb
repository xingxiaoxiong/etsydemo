<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p>¥<%= listing.price %></p>
            <p><%= "卖家： #{listing.user.name}" %></p>
            
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to '添加新物品', new_listing_path, class: "btn btn-link" %>
<% end %>
