<table class="table table-striped table-bordered">
  <tr>
    <th class="center">图片</th>
    <th class="center">名称</th>
    <th class="center">描述</th>
    <th class="center">价格</th>
    <th class="center">操作</th>
  </tr>

  <% @listings.each do |listing| %>
    <tr>
      <td class="center"><%= image_tag listing.image.url(:thumb) %></td>
      <td class="center"><%= listing.name %></td>
      <td class="center"><%= listing.description %></td>
      <td class="center"><%= listing.price %></td>
      <td class="center">
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            操作 <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "查看", listing, class: "btn btn-link" %></li>
            <li><%= link_to '编辑', edit_listing_path(listing), class: "btn btn-link" %></li>
            <li class="divider"></li>
            <li><%= link_to '删除', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %> 
</table>


<br />
<% if user_signed_in? %>
  <%= link_to '添加新物品', new_listing_path, class: "btn btn-link" %>
<% end %>